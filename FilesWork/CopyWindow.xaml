<Window x:Class="FilesWork.CopyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FilesWork"
        mc:Ignorable="d"
        Title="CopyWindow" Height="100" Width="400">
        
    <Grid>
        <ProgressBar Name="progressBar" HorizontalAlignment="Left" Height="20" Margin="10" VerticalAlignment="Top" Width="380" IsIndeterminate="True"/>
        <Button x:Name="cancel" Content="Cancel" HorizontalAlignment="Left" Margin="299,35,0,0" VerticalAlignment="Top" Width="75" Click="cancel_Click"/>
    </Grid>
</Window>
